<!-- fragment_screen_slide_page.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/switch_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/beautiful"
        android:scaleType="centerCrop"
        android:contentDescription="@string/switch_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/switch_img"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:hint="@string/a"
        android:text="@string/motionFM"
        android:textColor="@color/button_material_light" />
</RelativeLayout>
